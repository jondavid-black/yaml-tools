types:
  task:
    description: A thing to do.
    namespace: main
    properties:
      description:
        type: str
        description: A description of the task.
        presence: required
      owner:
        type: str
        description: The person responsible for the task.
        presence: optional
      complete:
        type: bool
        description: Is the task finished? True if yes, false if no.
        presence: required
        default: false